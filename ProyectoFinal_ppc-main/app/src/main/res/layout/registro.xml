<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Botón para seleccionar una imagen de la galería -->
        <!--<Button
            android:id="@+id/BlackButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circule_button"
            android:text="Seleccionar imagen" />-->

        <!-- ImageView para mostrar la imagen seleccionada -->
        <ImageView
            android:id="@+id/imageViewSelectedImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop" />

        <!-- EditText para el nombre completo -->
        <EditText
            android:id="@+id/editTextFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre completo" />

        <!-- EditText para el número de cédula -->
        <EditText
            android:id="@+id/editTextCedulaNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número de cédula" />

        <!-- EditText para el número de teléfono -->
        <EditText
            android:id="@+id/editTextPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número de teléfono" />

        <!-- EditText para el nombre de usuario -->
        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de usuario" />

        <!-- EditText para la contraseña -->
        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:inputType="textPassword" />

        <!-- Botón para registrar al usuario -->
        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Terminar" />

    </LinearLayout>

</ScrollView>